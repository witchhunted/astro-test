.glow-icon1 {
  animation: glow1 10s ease-in-out infinite alternate; /* Adjust the animation properties as needed */
}
@keyframes glow1 {
  from {
      filter: drop-shadow(0 0 5px #fd75f2); /* Define the initial glow effect */
  }
  to {
      filter: drop-shadow(0 0 10px #fd75f2); /* Define the stronger glow effect */
  }
}

.glow-icon2 {
  animation: glow2 10s ease-in-out infinite alternate; /* Adjust the animation properties as needed */
}
@keyframes glow2 {
  from {
      filter: drop-shadow(0 0 5px #66c0f4); /* Define the initial glow effect */
  }
  to {
      filter: drop-shadow(0 0 10px #66c0f4); /* Define the stronger glow effect */
  }
}

.music {
  position: absolute;
  text-align: center;
  z-index: 1;
  left: 50%;
  bottom: 5%; /* Adjust the distance from the bottom to place it at the center bottom */
  transform: translateX(-50%);
  color: #FFF;
  text-shadow: 1px 1px 5px rgba(238, 238, 238, 0.69);
  transition: 0.3s ease;
}
.music:hover {
  box-shadow: 0 0 25px 5px rgba(102, 192, 244, 0.3); /* Adjust the values as needed */
  border-radius: 50%; /* Makes the box-shadow circular */
  position: absolute;
  text-align: center;
  z-index: 1;
  left: 50%;
  bottom: 5%; /* Adjust the distance from the bottom to place it at the center bottom */
  transform: translateX(-50%);
  color: #FFF;
  text-shadow: 1px 1px 5px rgba(238, 238, 238, 0.69);
}

.h1 {
  color: #FFF; /* Set the color to red (#FF0000), replace with your desired color */
}


h1 {
  font-size: 100px;
  text-shadow: 1px 1px 5px rgba(238, 238, 238, 0.69);
  color: #fff;
  text-decoration: none;
  display: inline-block;
  position: relative;
  user-select: none;
  font-weight:normal;
}
h1:after {
  background: none repeat scroll 0 0 transparent;
  bottom: 0;
  content: "";
  display: block;
  height: 2px;
  left: 50%;
  top: 88%;
  position: absolute;
  background: #fff;
  transition: width 0.3s ease 0s, left 0.3s ease 0s;
  width: 0;
}
h1:hover:after { 
  width: 100%; 
  left: 0; 
}

svg {
  width: 33px; /* Icon width */
  height: 33px; /* Icon height */
}

a {
  color: #FFF;
  display: inline-block; /* Add this line to make the <a> elements inline-block */
  text-decoration: none; /* Remove underline from links if needed */
}

a:hover {
  color: #FFF;
}

