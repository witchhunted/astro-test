@font-face {
  font-family: 'Caveat';
  src: url('../fonts/Caveat-Regular.woff2') format('woff2'),
       url('../fonts/Caveat-Regular.woff1') format('woff');
  font-weight: normal;
  font-style: normal;
}

.hero {

  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.hero::before {    
    content: "";
    background-image: url('/wpbed.jpg');
    background-size: cover;
    background-position:30%;
    position: absolute;
    top: -7px;
    right: 0px;
    bottom: 0px;
    left: 0px;
    opacity: 0.5;
}


html {
  overflow: hidden;
  background: black;
}

body {
  overflow: hidden;
  background: black;
  font-family: 'Caveat', cursive; /* Use the font-family name defined earlier */
}

.center {
  z-index: 1;
  position: absolute;
  margin: 0;
  top: 50.5%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.custom-icon1 {
  color: #FFF;
  position: absolute;
  top: 56%;
  left: 47%;
  display: inline-block;
  transition: 0.3s ease;
  transform: translateX(-100%);
}
.custom-icon1:hover {
  box-shadow: 0 0 25px 5px rgba(220, 152, 164, 0.3); /* Adjust the values as needed */
  border-radius: 50%; /* Makes the box-shadow circular */
  color: #FFF;
